{
  "name": "starter-vitepress-theme",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "^pnpm@8.1.0",
  "description": "starter package for building vitepress themes",
  "author": "John Campion",
  "license": "MIT",
  "homepage": "https://github.com/jcamp-code/starter-vitepress-theme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jcamp-code/starter-vitepress-theme.git"
  },
  "bugs": {
    "url": "https://github.com/jcamp-code/starter-vitepress-theme/issues"
  },
  "keywords": [
    "vite",
    "vue",
    "vitepress",
    "theme"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsc -w & tscp -w & vue-tsc -w --declaration --emitDeclarationOnly",
    "build": "tsc && tscp && vue-tsc --declaration --emitDeclarationOnly",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check --write .",
    "postinstall": "npx simple-git-hooks",
    "test": "vitest run",
    "release": "changelogen --release --push && pnpm publish",
    "release:minor": "changelogen --release --minor --push && pnpm publish",
    "release:major": "changelogen --release --major --push && pnpm publish",
    "release:patch": "changelogen --release --patch --push && pnpm publish",
    "demo": "pnpm dev & pnpm demo-dev",
    "demo-dev": "cd demo && pnpm dev",
    "demo-build": "build && demo-build-only",
    "demo-build-only": "cd demo && pnpm build",
    "demo-preview": "cd demo && pnpm preview"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@jcamp/eslint-config": "0.6.1",
    "@types/node": "^18.15.10",
    "@vue/tsconfig": "^0.1.3",
    "changelogen": "^0.5.2",
    "commitlint-config-unjs": "^1.0.0",
    "eslint": "^8.38.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^5.0.4",
    "typescript-cp": "^0.1.7",
    "vite": "^4.2.1",
    "vitepress": "1.0.0-alpha.64",
    "vitest": "^0.29.8",
    "vue": "^3.2.47",
    "vue-tsc": "^1.2.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search"
      ],
      "allowedVersions": {
        "typescript": "5"
      }
    }
  }
}
