{
  "name": "starter-vitepress-theme",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.1.0",
  "description": "starter package for building vitepress themes",
  "author": "John Campion",
  "license": "MIT",
  "homepage": "https://github.com/jcamp-code/starter-vitepress-theme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jcamp-code/starter-vitepress-theme.git"
  },
  "bugs": {
    "url": "https://github.com/jcamp-code/starter-vitepress-theme/issues"
  },
  "keywords": [
    "vite",
    "vue",
    "vitepress",
    "theme"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "dev": "run-s clean dev:start",
    "dev:start": "run-p dev:tsc dev:copy",
    "dev:tsc": "tsc --sourcemap -w",
    "dev:copy": "node scripts/copy -w",
    "build": "run-s clean build:tsc build:copy",
    "build:tsc": "tsc && vue-tsc --declaration --emitDeclarationOnly",
    "build:copy": "node scripts/copy",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check --write .",
    "prepare": "npx simple-git-hooks",
    "test": "vitest run",
    "release": "changelogen --release --push && pnpm publish",
    "release:minor": "changelogen --release --minor --push && pnpm publish",
    "release:major": "changelogen --release --major --push && pnpm publish",
    "release:patch": "changelogen --release --patch --push && pnpm publish",
    "demo": "run-p dev demo-dev",
    "demo-dev": "cd demo && pnpm dev",
    "demo-build": "run-s build demo-build-only",
    "demo-build-only": "cd demo && pnpm build",
    "demo-preview": "cd demo && pnpm preview"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@jcamp/eslint-config": "0.6.1",
    "@types/node": "^18.15.10",
    "@vue/tsconfig": "^0.1.3",
    "changelogen": "^0.5.2",
    "chokidar": "3.5.3",
    "commitlint-config-unjs": "^1.0.1",
    "eslint": "^8.38.0",
    "fast-glob": "^3.2.12",
    "fs-extra": "^11.1.1",
    "lint-staged": "^13.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "rimraf": "5.0.0",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "vitepress": "1.0.0-alpha.64",
    "vitest": "^0.29.8",
    "vue": "^3.2.47",
    "vue-tsc": "^1.2.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search"
      ],
      "allowedVersions": {
        "typescript": "5"
      }
    }
  }
}
